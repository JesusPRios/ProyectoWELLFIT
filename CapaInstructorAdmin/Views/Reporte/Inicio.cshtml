@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Reporte - WELLFIT</title>
    <style>
        h2 {
            font-weight: bold;
            font-size: 40px;
            margin-top: 70px;
        }

        .button-container {
            margin-top: 20px;
        }

            .button-container button {
                margin-right: 20px;
                background-color: #fca311;
                color: #000;
                padding: 10px;
                font-weight: bold;
                text-decoration: inherit;
                border-color: #fff;
                border-width: 2.5px;
                border-style: solid;
                border-radius: 5px;
                outline: none;
            }

                .button-container button:hover {
                    background-color: #fca311 !important;
                    transform: scale(1.1);
                }

        fieldset {
            border-radius: 5px;
            padding: 20px;
            margin-top: 5px;
            display: flex;
            flex-direction: column;
            margin-left: -20px;
        }

        .input-container {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

        select {
            padding: 10px;
            font-size: 16px;
            margin-right: 10px;
            width: 250px;
            border: 1px solid #ccc;
            border-radius: 5px;
            outline: none;
        }

        input[type="month"] {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            outline: none;
            display: none;
        }

        iframe {
            width: 100%;
            height: 600px;
            border: none;
            margin-top: 20px;
        }

        /* Estilos para la animación de carga */
        #loading-overlay {
            display: none; /* Oculto por defecto */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 1000;
        }

        #loading-spinner {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>

<h2>Reportes</h2>
<hr />

<fieldset>
    <div class="input-container">
        <select id="reportOptions" name="Tipo" onchange="showInput()">
            <option value="" disabled selected>Seleccione una opción</option>
            <option value="Asistencia">Asistencia</option>
            <option value="Maquinas">Estado de máquinas</option>
        </select>
        <input type="month" id="reportMonth" name="Mes" />
    </div>
</fieldset>

<div id="loading-overlay">
    <div id="loading-spinner">
        <img src="~/Content/loading.gif" alt="Cargando..." />
    </div>
</div>

<div class="button-container">
    <button onclick="generateReport()">Generar Reporte</button>
    <button onclick="downloadReport()">Descargar Reporte</button>
</div>

<iframe id="pdfFrame" src="" style="display: none;"></iframe>

<script>
    function generateReport() {
        var selectElement = document.getElementById("reportOptions");
        var selectedOption = selectElement.options[selectElement.selectedIndex].value;
        var monthElement = document.getElementById("reportMonth");
        var selectedMonth = monthElement.value;

        if (selectedOption === "Asistencia" && !selectedMonth) {
            alert("Por favor, seleccione un mes para el reporte de asistencia.");
            return;
        }

        var pdfFrame = document.getElementById("pdfFrame");
        var url = '@Url.Action("GenerarReporte", "Reporte")' + '?tipo=' + selectedOption;

        if (selectedOption === "Asistencia") {
            url += '&mes=' + selectedMonth;
        }

        mostrarCarga();

        pdfFrame.src = url;
        pdfFrame.style.display = 'block';
    }

    function showInput() {
        var selectElement = document.getElementById("reportOptions");
        var selectedOption = selectElement.value;
        var monthInput = document.getElementById("reportMonth");

        if (selectedOption === "Asistencia") {
            monthInput.style.display = 'inline-block';
        } else {
            monthInput.style.display = 'none';
        }
    }

    function mostrarCarga() {
        document.getElementById("loading-overlay").style.display = "block";
        setTimeout(ocultarCarga, 500);
    }

    function ocultarCarga() {
        document.getElementById("loading-overlay").style.display = "none";
    }

    function downloadReport() {
        var selectElement = document.getElementById("reportOptions");
        var selectedOption = selectElement.options[selectElement.selectedIndex].value;
        var monthElement = document.getElementById("reportMonth");
        var selectedMonth = monthElement.value;

        if (selectedOption === "Asistencia" && !selectedMonth) {
            alert("Por favor, seleccione un mes para el reporte de asistencia.");
            return;
        }

        var url = '@Url.Action("DescargarReporte", "Reporte")' + '?tipo=' + selectedOption;

        if (selectedOption === "Asistencia") {
            url += '&mes=' + selectedMonth;
        }

        window.location.href = url;
    }
</script>
