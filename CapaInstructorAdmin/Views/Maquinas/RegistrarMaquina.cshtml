@model CapaTablas.Maquina
@{
    ViewBag.Title = "Registrar Máquina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro de máquina</h2>
<hr />
<title>Registrar Máquina</title>

<style>
    h2 {
        margin-top: 90px;
        font-weight: 800;
    }

    #input {
        margin-top: 20px;
        background: #fff;
        color: #000;
        font-weight: bold;
        border: none;
    }

    .form-group {
        width: 400px;
    }

    .nowrap {
        white-space: nowrap;
    }

    .btn_a {
        background-color: #fff;
        color: #000;
        font-weight: bold;
        border: none;
        border-radius: 5px !important;
        height: 6px;
        margin-right: 3000px;
    }

    .align-middle {
        vertical-align: middle;
    }
</style>

@using (Html.BeginForm("Registrar", "Maquinas", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.instructor.idInstructor, "ID Instructor", htmlAttributes: new { @class = "control-label nowrap" })
        @Html.DropDownList("idInstructor", (IEnumerable<SelectListItem>)ViewBag.Instructores, "Seleccione un instructor", new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NombreMaquina, "Nombre", htmlAttributes: new { @class = "control-label nowrap" })
        <input class="form-control" id="NombreMaquina" name="NombreMaquina" required />
        @Html.ValidationMessageFor(model => model.NombreMaquina, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EstadoMaquina, "Estado", htmlAttributes: new { @class = "control-label nowrap" })
        @Html.DropDownList("EstadoMaquina", (IEnumerable<SelectListItem>)ViewBag.Estados, "Seleccione un estado", new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.EstadoMaquina, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input id="input" type="submit" value="Registrar" class="btn mr-2" />
    </div>
}