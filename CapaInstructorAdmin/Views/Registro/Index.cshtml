@model List<CapaTablas.Ingreso>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asistencia de aprendices - WELLFIT</title>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>

<h2 style="display: inline-block;">Listado de asistencia</h2>

<hr />

<form id="filterForm" method="get" action="@Url.Action("Index", "Registro")">
    <div class="form-row align-items-end">
        <div class="form-group col-md-3 mb-4">
            <label for="fechaInicio"><b>Fecha Inicio</b></label>
            <input type="date" id="fechaInicio" name="fechaInicio" class="form-control date-input" value="@Request.QueryString["fechaInicio"]" />
        </div>
        <div class="form-group col-md-3 mb-4">
            <label for="fechaFin"><b>Fecha Fin</b></label>
            <input type="date" id="fechaFin" name="fechaFin" class="form-control date-input" value="@Request.QueryString["fechaFin"]" />
        </div>
    </div>
    <input type="hidden" id="filterApplied" name="filterApplied" value="true" />
    <button type="button" class="btnFiltro" onclick="Filtrar()">Filtrar</button>
</form>
<hr />

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.Message
    </div>
}

<div id="tablaContainer" style="border-radius: 10px; padding: 5px; display: @(Request.QueryString["filterApplied"] == "true" ? "block" : "none");">
    @if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            No hay registros de ingreso para el rango de fechas seleccionado.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-radius: 10px;">
                <thead class="">
                    <tr style="color: black;">
                        <th scope="col">Identificación Aprendiz</th>
                        <th scope="col">Nombre Aprendiz</th>
                        <th scope="col">Número de Ficha</th>
                        <th scope="col">Fecha Ingreso</th>
                        <th scope="col">Hora Ingreso</th>
                        <th scope="col">Hora Salida</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ingreso in Model)
                    {
                        <tr>
                            <td>@ingreso.aprendiz.Identificacion</td>
                            <td>@ingreso.aprendiz.Nombre</td>
                            <td>@ingreso.aprendiz.Ficha</td>
                            <td>@ingreso.fechaIngreso.ToString("dd/MM/yyyy")</td>
                            <td>@ingreso.horaIngresoFormatted</td>
                            <td>@ingreso.horaSalidaFormatted</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    h2 {
        font-weight: bold;
        margin-top: 65px;
        color: black;
    }

    .btn:hover {
        background: #FFA500;
        border: none;
    }

    .btnFiltro {
        color: #000;
        font-weight: bold;
        text-decoration: inherit;
        border: 2.5px solid #FFA500;
        border-radius: 5px;
        background-color: #FFA500;
        padding: 6px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .date-input {
        width: 200px; /* Ancho de los input type=date*/
    }

    .btnFiltro:hover, .btnFiltro:focus, .btnFiltro:active {
        border-color: #FFA500 !important;
        outline: none;
        box-shadow: none;
        transform: scale(1.05);
    }

    .btnFiltro:focus, .btnFiltro:active {
        outline: none !important;
        box-shadow: none !important;
    }

    th, td {
        text-align: center;
    }

    table.table tbody td, table.table thead th {
        color: black !important;
        border: 1px solid black;
    }

    .btn-primary, .btn-danger {
        background-color: #FFA500;
        border-color: #FFA500;
        color: black;
    }

        .btn-primary .fas.fa-edit, .btn-danger .fas.fa-trash-alt {
            color: black;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background: none !important;
    }

    .fa-trash:before {
        color: black;
    }
</style>

<script src="~/Scripts/bootstrap.bundle.js"></script>

<script>
    function Filtrar() {
        var fechaInicio = document.getElementById("fechaInicio").value;
        var fechaFin = document.getElementById("fechaFin").value;

        if (!fechaInicio || !fechaFin) {
            alert("Por favor, complete ambos campos de fecha.");
            return;
        }

        var form = document.getElementById("filterForm");
        form.submit();
    }
</script>