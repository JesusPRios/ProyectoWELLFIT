@model CapaTablas.Aprendiz
@{
    ViewBag.Title = "RegistrarAprendiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro de aprendiz</h2>
<hr />
<title>Registrar aprendiz</title>

<style>
    h2 {
        margin-top: 90px;
        font-weight: 800;
    }

    #input {
        margin-top: 20px;
        background: #fff;
        color: #000;
        font-weight: bold;
        border: none;
    }

    .form-group {
        width: 400px;
    }

    .nowrap {
        white-space: nowrap;
    }

    .btn_a {
        background-color: #fff;
        color: #000;
        font-weight: bold;
        border: none;
        border-radius: 5px !important;
        height: 6px;
        margin-right: 3000px;
    }

    .align-middle {
        vertical-align: middle;
    }
</style>

@using (Html.BeginForm("RegistrarApre", "Registro", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Identificacion, "Identificación", htmlAttributes: new { @class = "control-label nowrap" })
        <input class="form-control" id="idAprendiz" name="idAprendiz" required />
        @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.tipoDocumento, "Tipo documento", htmlAttributes: new { @class = "control-label nowrap" })
        @Html.DropDownList("tipoDocumento", (IEnumerable<SelectListItem>)ViewBag.TipoDocumento, "Seleccione un tipo", new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.tipoDocumento, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, "Nombre", htmlAttributes: new { @class = "control-label nowrap" })
        <input class="form-control" id="NombreAprendiz" name="NombreAprendiz" required />
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Contraseña, "Contraseña", htmlAttributes: new { @class = "control-label nowrap" })
        <input class="form-control" id="Contraseña" name="Contraseña" required />
        @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ficha, "Ficha", htmlAttributes: new { @class = "control-label nowrap" })
        <input class="form-control" id="Ficha" name="numeroFicha" required />
        @Html.ValidationMessageFor(model => model.Ficha, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProgramaFormacion, "Programa de Formacion", htmlAttributes: new { @class = "control-label nowrap" })
        <input class="form-control" id="ProgramaFormacion" name="ProgramaFormacion" required />
        @Html.ValidationMessageFor(model => model.ProgramaFormacion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Estado, "Estado", htmlAttributes: new { @class = "control-label nowrap" })
        @Html.DropDownList("EstadoAprendiz", (IEnumerable<SelectListItem>)ViewBag.Estado, "Seleccione un estado", new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input id="input" type="submit" value="Registrar" class="btn mr-2" />
    </div>
}