@model CapaTablas.EJERCICIO_has_RUTINA

@{
    ViewBag.Title = "Detalles de Rutina";
    Layout = "~/Views/Shared/ViewAprendiz.cshtml";
}

<title>Detalles - WELLFIT</title>

<style>
    .card {
        margin-bottom: 20px;
        margin-top: 35px;
        border: none;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 6px 0 hsla(0, 0%, 0%, .4);
    }

    .card-header {
        background-color: #fca311 !important;
        color: #000;
        padding: 10px;
        font-weight: bold;
        border-bottom: 1px solid #007bff;
        border-radius: 5px 5px 0 0;
        border: none;
        font-weight: bold !important;
    }

    .card-body {
        padding: 15px;
    }

        .card-body p {
            margin-bottom: 10px;
        }

    .btn {
        margin-top: 10px;
        margin-right: 20px;
        color: #000;
        font-weight: bold;
        text-decoration: inherit;
        border-radius: 5px;
        background-color: #FFA500;
        border: none;
        font-size: 15px;
        font-size: 15px !important;
    }


        .btn:hover {
            transform: scale(1.05);
        }

    .alta,
    .media,
    .yellow {
        padding: 5px 8px;
        border-radius: 5px;
        color: #000;
        font-weight: 600;
        width: 100px; /* Establecer el mismo ancho para todas las clases */
        display: inline-block; /* Alinear en línea */
        text-align: center; /* Alinear texto al centro */
    }

    .alta {
        background: #f64747;
    }

    .media {
        background: #007bff;
    }

    .yellow {
        background: #FFA500;
    }

    .ejerciciostitle {
        margin-bottom: 15px !important;
        font-weight: 400;
        font-size: 25px;
        font-weight:bold;
    }
    .media {
        background: #ffa500;
    }
    h2{
        color:black;
        font-weight: bold;
    }
</style>

<div class="card">
    <div class="card-header bg-primary text-white">
        <div style="display: inline-block; margin-bottom: 8px !important; ">
            <h2 style="display: inline;">@Model.Rutina.nombreRutina</h2>
        </div>
    </div>
    <div class="card-body">
        <h2 class="ejerciciostitle">Ejercicios</h2>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Dificultad</th>
                        <th>Maquina</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ejercicio in Model.Ejercicios)
                    {
                        <tr>
                            <td>@ejercicio.Nombre</td>
                            <td>@ejercicio.Tipo</td>
                            <td>
                                @switch (ejercicio.Dificultad.ToLower())
                                {
                                    case "alta":
                                        <span class="alta">@ejercicio.Dificultad</span>
                                        break;

                                    case "media":
                                        <span class="media">@ejercicio.Dificultad</span>
                                        break;

                                    case "fácil":
                                        <span class="yellow">@ejercicio.Dificultad</span>
                                        break;

                                    default:
                                        @ejercicio.Dificultad
                                        break;
                                }
                            </td>
                            <td>@ejercicio.maquina.NombreMaquina</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <a href="@Url.Action("EditarRutina", "Rutina", new { id = Model.Rutina.idRutina, identificacion = Model.Rutina.aprendiz.Identificacion })" class="btn btn-a mr-2">Editar</a>

        <a href="@Url.Action("Index", "Rutina")" class="btn btn-a mr-2">Volver</a>
    </div>
</div>